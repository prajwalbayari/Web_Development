<!-- Creating new posts -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create new posts</title>
</head>
<body>
    <form method="post" action="/posts">
        <input placeholder="Enter your username" name="username">
        <br><br>
        <textarea placeholder="Write your post" name="content" rows="10" cols="40"></textarea><br>
        <button>Submit</button>
    </form>
</body>
</html>